<h1>Notas Fiscais</h1>
<h3>Opções</h3>
<%= link_to 'Adicionar nova Nota Fiscal', new_notum_path %>

<h2>Lista de todas Notas Fiscais</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>Número</th>
    <th>Data</th>
    <th>Empresa</th>
    <th>Valor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nota.each do |notum| %>
  <tr>
    <td><%= notum.numero %></td>
    <td><%= notum.data %></td>
    <td><%= notum.empresa %></td>
    <td><%= notum.valor %></td>
    <td><%= link_to 'Ver Documento', notum , :class => "btn btn-sm btn-info"%></td>
    <td><%= link_to 'Editar', edit_notum_path(notum),:class => "btn btn-sm btn-warning" %></td>
    <td><%= link_to 'Apagar', notum,:class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Você tem certeza' } %></td>
  </tr>
<% end %>
</table>
