<h1>Atas de Reunião</h1>
<h3>Opções</h3>
<%= link_to 'Adicionar nova Ata', new_atum_path %>

<h2>Lista de todas Atas</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>Número</th>
    <th>Data</th>
    <th>Ordinária | Extraordinária</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ata.each do |atum| %>
  <tr>
    <td><%= atum.numero %></td>
    <td><%= atum.data %></td>
    <td><%= atum.ordinaria? ? "Ordinária" : "Extraordinária" %></td>
    <td><%= link_to 'Ver Documento', atum , :class => "btn btn-sm btn-info"%></td>
    <td><%= link_to 'Editar', edit_atum_path(atum),:class => "btn btn-sm btn-warning" %></td>
    <td><%= link_to 'Apagar', atum,:class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Você tem certeza' } %></td>
  </tr>
<% end %>
</table>
