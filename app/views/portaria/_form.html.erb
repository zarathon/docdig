<div class="well">
	<%= form_for(@portarium, :html => {:class => "form-horizontal", :multipart => true }) do |f| %>
	<% if @portarium.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@portarium.errors.count, "error") %> prohibited this portarium from being saved:</h2>

		<ul>
			<% @portarium.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<fieldset>
		<div class="form-group">
			<%= f.label :numero , "Número", :class => "control-label" %>
			<%= f.text_field :numero,:class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :data, :class => "control-label" %>
			<%= f.date_select :data, order: [:day, :month, :year], :use_two_digit_numbers => true, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :arquivo , :class => "control-label"%>
			<%= f.file_field :arquivo %>
		</div>
		<div class="form-group">
			<%= f.label :observacao, "Observação", :class => "control-label" %>
			<br />
			<%= f.text_area :observacao,:rows => 5,:class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.submit "Salvar", :class => "btn btn-primary" %>
		</div>
	</fieldset>
	<% end %>
</div>
