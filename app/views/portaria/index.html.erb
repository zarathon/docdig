<h1>Portarias</h1>
<h3>Opções</h3>
<%= link_to 'Adicionar nova Portaria', new_portarium_path %>

<h2>Lista de todas Portarias</h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>Número</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @portaria.each do |portarium| %>
  <tr>
    <td><%= portarium.numero %></td>
    <td><%= portarium.data %></td>
    <td><%= link_to 'Ver Documento', portarium , :class => "btn btn-sm btn-info"%></td>
    <td><%= link_to 'Editar', edit_portarium_path(portarium),:class => "btn btn-sm btn-warning" %></td>
    <td><%= link_to 'Apagar', portarium,:class => "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Você tem certeza' } %></td>
  </tr>
<% end %>
</table>
