<div class="well">
<%= form_for(@atum) do |f| %>
  <% if @atum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@atum.errors.count, "error") %> prohibited this atum from being saved:</h2>

      <ul>
      <% @atum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
		<div class="form-group">
			<%= f.label :numero , "Número", :class => "control-label" %>
			<%= f.text_field :numero,:class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :data, :class => "control-label" %>
			<%= f.date_select :data, order: [:day, :month, :year], :use_two_digit_numbers => true, :class => "form-control" %>
		</div>
		<div class="form-group">
			<%= f.label :arquivo , :class => "control-label"%>
			<%= f.file_field :arquivo %>
		</div>
		<div class="form-group">
			<div class="checkbox">
				<%= f.label :ordinaria, "Se for uma Ata de Reunião Ordinária, marcar o checkbox ao lado. " %>
				<%= f.check_box :ordinaria,:class => "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= f.submit "Salvar", :class => "btn btn-primary" %>
		</div>
	</fieldset>
<% end %>
</div>
